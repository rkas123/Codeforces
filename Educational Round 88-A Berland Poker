int fastexp(int a,int b)
{
    int answer=1;
    int temp=a;
    while(b>0)
    {
        if(b&1)
            answer*=(temp);
        temp*=temp;
        b>>=1;
    }
    return answer;

}
int Gcd(int a, int b)
{
    if(a==0)
        return b;
    else
        return Gcd(b%a,a);
}
