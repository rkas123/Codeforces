        in(n);
        in(m);
        in(k);
        int cards=(n/k);
        if(cards>=m)
        {
            cout<<m<<endl;
            continue;
        }        
        int left=m-cards;
        int rem=k-1;
        int y;
        if((left%rem)==0)
        {
            y=(left/rem);
        }
        else
        {
            y=(left/rem)+1;
        }
        cout<<cards-y<<endl;
    }
    return 0;
}
