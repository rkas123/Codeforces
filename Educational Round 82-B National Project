using namespace std;
int fastexp(int a,int b)
{
    int answer=1;
    int temp=a;
    while(b>0)
    {
        if(b&1)
            answer*=(temp);
        temp*=temp;
        b>>=1;
    }
    return answer;

}
int32_t main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    #ifndef ONLINE_JUDGE 
        freopen("input.txt", "r", stdin);
        freopen("output.txt", "w", stdout);
    #endif
    w(t)
    {
        in(n);in(g);in(b);
        if(n<=g)
        {
            cout<<n<<endl;
            continue;
        }
        int good=ceil(n/2.0);
        int net=b+g;
        int cycle;
        if(good%g == 0)
        {
            cycle=good/g -1;
        }
        else
        {
            cycle=good/g;
        }
        int days=cycle*net;
        days+=(good - (cycle*g));
        if(days<n)
        {
            days+=(n-days);
        }
        cout<<days<<endl;
    }

    return 0;
}
