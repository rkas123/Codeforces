using namespace std;
int fastexp(int a,int b)
{
    int answer=1;
    int temp=a;
    while(b>0)
    {
        if(b&1)
            answer*=(temp);
        temp*=temp;
        b>>=1;
    }
    return answer;

}
int fun(int n,int m)
{
   if(n>=m)
   {
     return n-m;
   }
   else if(m%2==0)
   {
     return 1+fun(n,m/2);
   }
   else
   {
     return 2+fun(n,(m+1)/2);
   }
}
int32_t main()
{
    ios_base::sync_with_stdio(false);
